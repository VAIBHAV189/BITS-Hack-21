    <div class="adsense">
        <div class="input-group mb-3">
            <input type="text" class="form-control " id="accName">
            <button id="fetchAdSense" class="text-white btn btn-primary">Load adSense details</button>
        </div>
        

        <br>
        <div class="input-group mb-3">
            <input type="date" class="form-control" id="startDate">
            <input type="date" class="form-control" id="endDate">
            <button id="fetchYtAnalytics" class="btn btn-success">Load Youtube Analytics</button>
        </div>
        

        <div class="container">
            <canvas id="myChart">

            </canvas>
        </div>
    </div>
    
    <div class="pendingReq">
        {{!-- <a href="/creator/pendingRequests">Get Pending Requests</a> --}}
        <table cellspacing="5" cellpadding="5" class="table table-striped table-dark">
            <thead>
                <th>Request Id</th>
                <th>Request Meta Data</th>
                <th>Offered on</th>
                <th>Promoter Username</th>
                <th>Amount(in Rs)</th>
                <th>Deadline</th>
                <th>Action</th>
                <th>Submit</th>
            </thead>
            {{#each pendingReqList as |obj|}}
                <tr>
                    
                        <td>{{obj.requestId}}</td>
                        <td>{{obj.requestMetaData}}</td>
                        <td>{{obj.offeredOn}}</td>
                        <td>{{obj.promoterUsername}}</td>
                        <td>{{obj.amount}}</td>
                        <td>{{obj.deadline}}</td>
                        <form method="POST" action="/creator/updRequestStatus">
                            <td class="action">
                                <div class=" group select"> 
                                    <input type="text" name="requestId" value="{{obj.requestId}}" hidden>
                                    <select name="status" id="type" >
                                        <option disabled selected value>Choose</option>
                                        <option value="Accept" >Accept</option>
                                        <option value="Reject">Reject</option>
                                    </select>   
                                </div>
                            </td>
                            <td><button type="submit" class="btn btn-danger">Update</button></td>
                        </form> 
                </tr>
            {{/each}}
        </table>
    </div>

    <div class="paidReq">
        {{!-- <a href="/creator/paidRequests">Get Paid Requests</a> --}}
        <table cellspacing="5" cellpadding="5" class="table table-striped table-dark">
            <thead>
                <th>Request Id</th>
                <th>Request Meta Data</th>
                <th>Offered on</th>
                <th>Promoter Username</th>
                <th>Amount(in Rs)</th>
                <th>Deadline</th>
                <th>Action</th>
                <th>Submit</th>
            </thead>
            {{#each paidReqList as |obj|}}
                <tr>
                        <td>{{obj.requestId}}</td>
                        <td>{{obj.requestMetaData}}</td>
                        <td>{{obj.offeredOn}}</td>
                        <td>{{obj.promoterUsername}}</td>
                        <td>{{obj.amount}}</td>
                        <td>{{obj.deadline}}</td>
                        <form method="POST" action="/creator/updRequestStatus">
                            <td>
                                <div class=" group select"> 
                                    <input type="text" name="requestId" value="{{obj.requestId}}" hidden>
                                    <select name="status" id="type" >
                                        <option disabled selected value> -- Choose -- </option>
                                        <option value="Complete">Mark as Done</option>
                                    </select>   
                                </div>
                            </td>
                            <td><button type="submit" class="btn btn-danger">Update</button></td>
                        </form> 
                </tr>
            {{/each}}
        </table>
    </div>

    <div class="completedReq">
        {{!-- <a href="/creator/completedRequests">Get Completed Requests</a> --}}
        <table cellspacing="5" cellpadding="5" class="table table-striped table-dark">
            <thead>
                <th>Request Id</th>
                <th>Request Meta Data</th>
                <th>Offered on</th>
                <th>Promoter Username</th>
                <th>Amount(in Rs)</th>
            </thead>
            {{#each compReqList as |obj|}}
                <tr>
                    <td>{{obj.requestId}}</td>
                    <td>{{obj.requestMetaData}}</td>
                    <td>{{obj.offeredOn}}</td>
                    <td>{{obj.promoterUsername}}</td>
                    <td>{{obj.amount}}</td>
                </tr>
            {{/each}}
        </table>
    </div>

    <div class="payHistory">
        {{!-- <a href="/creator/myPayments">Get My Payment History</a> --}}
        <table cellspacing="5" cellpadding="5" class="table table-striped table-dark">
            <thead>
                <th>Payment ID</th>
                <th>Request ID</th>
                <th>Promoter Username</th>
                <th>Payment Type</th>
                <th>Payment Mode</th>
                <th>TimeStamp</th>
                <th>Amount(in Rs)</th>
            </thead>
            {{#each paymentsList as |obj|}}
            <tr>
                <td>{{obj.paymentId}}</td>
                <td>{{obj.requestId}}</td>
                <td>{{obj.promoterUsername}}</td>
                <td>{{obj.paymentType}}</td>
                <td>{{obj.paymentMode}}</td>
                <td>{{obj.timestamp}}</td>
                <td>{{obj.amount}}</td>
            </tr>
            {{/each}}
        </table>
    </div>

    <script src="script.js"></script>
</body>
